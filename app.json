{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.rein.ensy",
  "version": "1.0.0",
  "compatibility": ">=12.4.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "brandColor": "#007eff",
  "name": {
    "en": "Ensy Ventilation"
  },
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "description": {
    "en": ""
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "author": {
    "name": "Rein Undheim",
    "email": "rein@undheim.io"
  },
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Heating started"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ensy-climate"
          }
        ],
        "id": "heating_started"
      },
      {
        "title": {
          "en": "Heating stopped"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ensy-climate"
          }
        ],
        "id": "heating_stopped"
      },
      {
        "title": {
          "en": "Preset mode changed"
        },
        "tokens": [
          {
            "name": "preset_mode",
            "type": "string",
            "title": {
              "en": "Preset mode"
            }
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ensy-climate"
          }
        ],
        "id": "preset_mode_changed"
      }
    ],
    "conditions": [
      {
        "title": {
          "en": "Is heating"
        },
        "titleFormatted": {
          "en": "!{{Is|Is not}} heating"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ensy-climate"
          }
        ],
        "id": "is_heating"
      },
      {
        "title": {
          "en": "Preset mode is"
        },
        "titleFormatted": {
          "en": "Preset mode !{{is|is not}} [[preset_mode]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ensy-climate"
          },
          {
            "type": "dropdown",
            "name": "preset_mode",
            "title": {
              "en": "Preset mode"
            },
            "values": [
              {
                "id": "heat",
                "title": {
                  "en": "Home"
                }
              },
              {
                "id": "off",
                "title": {
                  "en": "Away"
                }
              }
            ]
          }
        ],
        "id": "preset_mode_is"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Set preset mode"
        },
        "titleFormatted": {
          "en": "Set preset mode to [[preset_mode]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ensy-climate"
          },
          {
            "type": "dropdown",
            "name": "preset_mode",
            "title": {
              "en": "Preset mode"
            },
            "values": [
              {
                "id": "home",
                "title": {
                  "en": "Home"
                }
              },
              {
                "id": "away",
                "title": {
                  "en": "Away"
                }
              },
              {
                "id": "boost",
                "title": {
                  "en": "Boost"
                }
              }
            ]
          }
        ],
        "id": "set_preset_mode"
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "InoVent AHU Units"
      },
      "class": "airconditioning",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "thermostat_mode",
        "fan_speed",
        "onoff.heating",
        "measure_temperature.extract",
        "measure_temperature.exhaust",
        "measure_temperature.outside",
        "measure_temperature.heater"
      ],
      "images": {
        "small": "/drivers/inovent/assets/images/small.png",
        "large": "/drivers/inovent/assets/images/large.png",
        "xlarge": "/drivers/inovent/assets/images/xlarge.png"
      },
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 15,
          "max": 26,
          "step": 1
        },
        "thermostat_mode": {
          "values": [
            {
              "id": "heat",
              "title": {
                "en": "Heat"
              }
            },
            {
              "id": "off",
              "title": {
                "en": "Away"
              }
            }
          ]
        },
        "measure_temperature.extract": {
          "title": {
            "en": "Extract Temperature"
          }
        },
        "measure_temperature.exhaust": {
          "title": {
            "en": "Exhaust Temperature"
          }
        },
        "measure_temperature.outside": {
          "title": {
            "en": "Outside Temperature"
          }
        },
        "measure_temperature.heater": {
          "title": {
            "en": "Heater Temperature"
          }
        },
        "onoff.heating": {
          "title": {
            "en": "Turn on/off"
          }
        }
      },
      "pair": [
        {
          "id": "manual_pairing"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "inovent"
    }
  ]
}